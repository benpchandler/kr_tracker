# Environment configuration for KR Tracker
# Copy this file to .env and adjust settings as needed

# API Server Configuration
VITE_API_TARGET=http://localhost:3001

# Backend Mode
# Set to 'true' to use Express/SQLite backend, 'false' for localStorage only
VITE_USE_BACKEND=true

# Mock Data Fallback
# Set to 'true' to fall back to mock data if backend is unavailable
VITE_ALLOW_MOCK_FALLBACK=true

# Development Mode
# Set to 'true' to show developer tools and options
VITE_DEV_MODE=false

# Data Management
# These commands work when using backend mode
# npm run data:export - Export SQLite to JSON seeds
# npm run data:import - Import JSON seeds to SQLite
# npm run data:check  - Validate and export if needed